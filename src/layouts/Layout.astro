---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Float from "../components/Float.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Nuestra amplia gama de servicios cubre desde pequeñas reparaciones hasta mantenimiento preventivo, garantizando que tus electrodomésticos se mantengan en perfecto estado durante toda su vida útil."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-base-100">
    <Header />
    <slot />
    <Footer />
    <Float />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
  </body>
</html>
