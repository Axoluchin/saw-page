---
const logos = [
  "easy.png",
  "electric.png",
  "electrolux.jpeg",
  "kitchenAid.png",
  "lg.png",
  "mabe.png",
  "maytag.jpeg",
  "oster.png",
  "subzero.png",
  "tfal.svg",
  "whirlpool.png",
];
---

<section class="my-8">
  <h3 class="text-center text-typo-100 text-5xl font-bold italic mb-8">
    TRABAJAMOS TODAS LAS MARCAS
  </h3>

  <div
    class="relative m-auto max-w-7xl overflow-hidden before:absolute before:left-0 before:top-0 before:z-[2] before:h-full before:w-[100px] before:bg-[linear-gradient(to_right,rgba(30,30,30)_0%,rgba(255,255,255,0)_100%)] before:content-[''] after:absolute after:right-0 after:top-0 after:z-[2] after:h-full after:w-[100px] after:-scale-x-100 after:bg-[linear-gradient(to_right,rgba(30,30,30)_0%,rgba(255,255,255,0)_100%)] after:content-['']"
  >
    <div class="animate-infinite-slider flex w-[calc(250px*10)]">
      {
        logos.map((logo) => (
          <div class="slide flex w-[125px] items-center justify-center mx-4">
            <img
              src={`./images/companies/${logo}`}
              alt={logo}
              class="h-full object-contain"
            />
          </div>
        ))
      }
      {
        logos.map((logo) => (
          <div class="slide flex w-[125px] items-center justify-center mx-4">
            <img
              src={`./images/companies/${logo}`}
              alt={logo}
              class="h-full object-contain"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
